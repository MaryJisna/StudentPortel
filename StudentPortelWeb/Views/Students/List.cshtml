@{
}

@model List<StudentPortelWeb.Models.Entities.Student>
<h1>Students</h1>
<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>...Name ....</th>
            <th>Email</th>
            <th> Phone</th>
            <th>Place</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.sid</td><td></td>
                <td>@student.Name</td>
                <td>@student.Email</td>
                <td>@student.Phone</td>
                <td>@student.Place</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Students" asp-action="Edit" asp-route-id="@student.sid">Edit</a>
                </td>
                
            </tr>
        }
       
    </tbody>
</table>